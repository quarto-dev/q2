{
  "name": "hub-client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:fresh": "npm run preflight && vite",
    "preflight": "npm run build:wasm && npm run typecheck",
    "build": "tsc -b && vite build",
    "build:wasm": "node scripts/build-wasm.js",
    "build:all": "npm run build:wasm && npm run build",
    "typecheck": "tsc -p tsconfig.app.json --noEmit",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:wasm": "vitest run --config vitest.wasm.config.ts",
    "test:wasm:watch": "vitest --config vitest.wasm.config.ts",
    "test:e2e": "npm run build:wasm && playwright test",
    "test:e2e:ui": "npm run build:wasm && playwright test --ui",
    "test:ci": "npm run test && npm run test:integration && npm run test:wasm",
    "test:all": "npm run build:wasm && npm run test && npm run test:integration && npm run test:wasm && npm run test:e2e",
    "bootstrap-test-fixtures": "npx tsx e2e/scripts/regenerate-fixtures.ts"
  },
  "dependencies": {
    "@automerge/automerge-repo": "^2.5.1",
    "@automerge/automerge-repo-network-websocket": "^2.5.1",
    "@monaco-editor/react": "^4.7.0",
    "@quarto/quarto-automerge-schema": "*",
    "@quarto/quarto-sync-client": "*",
    "ejs": "^3.1.10",
    "fast-diff": "^1.3.0",
    "idb": "^8.0.3",
    "morphdom": "^2.7.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sass": "^1.77.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@automerge/automerge-repo-storage-nodefs": "^2.5.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.50.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fake-indexeddb": "^6.0.0",
    "globals": "^16.5.0",
    "jsdom": "^26.0.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.17",
    "ws": "^8.19.0"
  }
}
